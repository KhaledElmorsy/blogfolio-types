{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2016", 
    "module": "CommonJS",
    "lib": ["ESNext"],
    "outDir": "./build",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
